<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cons"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.AuthLanguageFragment">
    <ImageView
        android:id="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintVertical_bias="0.1"
        android:src="@drawable/login_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/uz"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.85"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        app:cardBackgroundColor="@color/lan_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lan_text"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                android:text="O’zbekcha"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                app:layout_constraintLeft_toRightOf="@id/lan_text"
                app:layout_constraintTop_toTopOf="@id/lan_text"
                app:layout_constraintBottom_toBottomOf="@id/lan_text"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                android:src="@drawable/flag_uz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cril"
        app:layout_constraintTop_toBottomOf="@id/uz"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.85"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintVertical_bias="0.06"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        app:cardBackgroundColor="@color/lan_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lan_text_cr"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                android:text="Ўзбекча"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                app:layout_constraintLeft_toRightOf="@id/lan_text_cr"
                app:layout_constraintTop_toTopOf="@id/lan_text_cr"
                app:layout_constraintBottom_toBottomOf="@id/lan_text_cr"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                android:src="@drawable/flag_uz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/ru"
        app:layout_constraintTop_toBottomOf="@id/cril"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintWidth_percent="0.85"
        app:cardCornerRadius="@dimen/_5sdp"
        app:layout_constraintVertical_bias="0.07"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        app:cardBackgroundColor="@color/lan_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/lan_text_ru"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.45"
                android:text="Русский"
                android:textStyle="normal"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                app:layout_constraintLeft_toRightOf="@id/lan_text_ru"
                app:layout_constraintTop_toTopOf="@id/lan_text_ru"
                app:layout_constraintBottom_toBottomOf="@id/lan_text_ru"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                android:src="@drawable/flag_russia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_loading"
    android:visibility="gone"
        android:background="@drawable/gradient_language_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/loading"
            app:lottie_loop="true" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/lottie"
            app:layout_constraintLeft_toLeftOf="@id/lottie"
            app:layout_constraintRight_toRightOf="@id/lottie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.05"
            android:id="@+id/text_view_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:visibility="gone"
        android:id="@+id/include"
        layout="@layout/loading"/>
</androidx.constraintlayout.widget.ConstraintLayout>